{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:/raylib/w64devkit/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",                                 // The source file to compile
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe", // The output executable
                "-I${workspaceFolder}/include",            // Include Raylib headers
                "-L${workspaceFolder}/lib",                // Link Raylib libraries
                "-lraylib",                                // Link Raylib itself
                "-lopengl32", "-lgdi32", "-lwinmm"         // Windows-specific dependencies
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
